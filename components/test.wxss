.letter-index-list-wrapper{
  height:100%;
  background: #fff;
}

.list-outer-wrapper{
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.letter-index-wrapper{
  position: fixed;
  top: 50%;
  right: 0;
  transform: translateY(-60%);
  z-index: 10;
}
.letter-index-item{
  flex: 1;
  display: block;
  font-size: 24rpx;
  color: #33B9FF;
  text-align: center;
}
.letter-index{
  line-height: 40rpx;
  height: 40rpx;
  padding-left: 25rpx;
  font-size: 28rpx;
  background: #eee;
  color: #999;
}
.list-item{
  display: block;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  padding-left: 25rpx;
}