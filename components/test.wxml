<view class='letter-index-list-wrapper' style='{{styles}}'>
      <view class='list-outer-wrapper'>
          <scroll-view scroll-y style='width:100%;height:100%;' scroll-with-animation scroll-into-view='{{cityListId}}'>
              <view class='list-inner-wrapper'>
                <block wx:for='{{citylist}}' wx:key='this' wx:for-item='letterItem' wx:for-index='letterIndex'>
                  <view class='letter-index' id='{{letterItem.letter}}'>{{letterItem.letter}}</view>
                  <view class='list-item' wx:for='{{letterItem.data}}' wx:key='this' data-types='list' catchtap='cityTap' data-index='{{index}}' data-val='{{item}}'>{{item.cityName}}</view>
                </block>
              </view>
          </scroll-view>
      </view>
      <view class='letter-index-wrapper'>
          <text class='letter-index-item' wx:for='{{letter}}' wx:key='this' catchtap='letterTap' data-item='{{item}}'>{{item}}</text>
      </view>
  </view>